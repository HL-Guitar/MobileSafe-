<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->

        <item name="android:windowNoTitle">true</item>
    </style>
    <!--  <TextView
        android:layout_width="match_parent"
